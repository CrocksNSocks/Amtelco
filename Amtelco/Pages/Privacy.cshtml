@page
@model PrivacyModel
@{
    ViewData["Title"] = "Appointments";
}
<h1>@ViewData["Title"]</h1>
<body>
<div class="springledorf" id="toolbar">
    <table>
        <tr>
            <th id="add" onclick="viewAddAppt()">Add</th>
            <th id="edit" onclick="viewEditAppt()">Edit</th>
            <th id="delete" onclick="viewDelAppt()">Delete</th>
            <th id="logout" onclick="logout()">Logout</th>
        </tr>
    </table>
</div>


<form action="~/js/site.js" name="newAppt" id="addAppt">
   <div class="create-appt">
        <label for="startAppt">Start Time</label><br/>
        <input type="text" id="startAppt"/><br/>
        <label for="endAppt">End Time</label><br/>
        <input type="text" id="endAppt"/><br/>
        <label for="nameAppt">Name</label><br/>
        <input type="text" id="nameAppt"/><br/>
        <label for="descAppt">Details</label><br/>
        <input type="text" id="descAppt"/><br/>
        <button type="button" name="create" id="createAppt" onclick="addAppointment()">Create Appointment</button>
        
    </div>
</form>

<form action="~/js/site.js" name="changeAppt" id="chooseAppt">
   <div class="create-appt">
        <button type="button" name="create" id="createAppt" onclick="editAppointment()">Choose Appointment</button>
        
    </div>
</form>

<form action="~/js/site.js" name="changeAppt" id="editAppt">
   <div class="create-appt">
        <label for="newStart">New Start Time</label><br/>
        <input type="text" id="newStart"/><br/>
        <label for="newEnd">New End Time</label><br/>
        <input type="text" id="newEnd"/><br/>
        <label for="newName">New Name</label><br/>
        <input type="text" id="newName"/><br/>
        <label for="newDesc">New Details</label><br/>
        <input type="text" id="newDesc"/><br/>
        <button type="button" name="create" id="createAppt" onclick="editAppointment()">Save Appointment</button>
        
    </div>
</form>

<form action="~/js/site.js" name="removeAppt" id="deleteAppt">
   <div class="create-appt">
        <button type="button" name="create" id="createAppt" onclick="deleteAppointment()">Delete Appointment</button>
        
    </div>
</form>


<div class="appointment-options">
    <form>
        <input type = "button" value="List" name="view" id="viewList" onclick="SelectList()"/>

        <input type = "button" value="Month" name="view" id="viewCal" onclick="SelectCal()"/>
        
    </form>
</div>

<div class="appointments-list">
    <table class="appointment-list" id="list">
        <tr>
            <th>Start</th>
            <th>End</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </table>
</div>

<div class="appointments-calender" id="calender">
    <div class="cur-month" >
        <ul>
